<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:textSize="16sp" android:textColor="@color/intercom_main_blue" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:includeFontPadding="false"/>
    <TextView android:textSize="15sp" android:textColor="@color/intercom_grey_500" android:id="@+id/description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:lineSpacingExtra="2sp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp">
        <ImageView android:layout_gravity="bottom" android:id="@+id/avatar" android:layout_width="@dimen/intercom_avatar_size" android:layout_height="@dimen/intercom_avatar_size" android:layout_marginRight="14dp" android:contentDescription="Teammate avatar" android:layout_marginEnd="14dp"/>
        <TextView android:textSize="15sp" android:textColor="@color/intercom_grey_500" android:id="@+id/author" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
