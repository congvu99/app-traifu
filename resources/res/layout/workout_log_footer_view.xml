<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/addFilesBtn" android:background="@color/white" android:padding="17dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
        <TextView android:textStyle="bold" android:textColor="@color/textColor" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/addFiles" android:layout_weight="1"/>
        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/add_icon"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/addExerciseBtn" android:background="@color/white" android:padding="17dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textStyle="bold" android:textColor="@color/textColor" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/addExercise" android:layout_weight="1"/>
        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/add_icon"/>
    </LinearLayout>
    <View android:background="@color/dividerColor" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="17dp" android:paddingTop="17dp" android:paddingRight="14dp" android:paddingBottom="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/shareOnNewsFeed" android:layout_weight="1"/>
            <Switch android:theme="@style/brownSwitch" android:id="@+id/share_cb" android:layout_width="56dp" android:layout_height="wrap_content" android:checked="true" android:textOn="" android:textOff="" android:switchMinWidth="56dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/dividerColor" android:layout_width="match_parent" android:layout_height="1dp"/>
    <com.joanzapata.iconify.widget.IconTextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/saveBtn" android:background="@color/tintColor" android:paddingLeft="15dp" android:clickable="true" android:layout_width="280dp" android:layout_height="44dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="@string/save"/>
</LinearLayout>
