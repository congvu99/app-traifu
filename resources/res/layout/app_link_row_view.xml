<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="64dp">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.joanzapata.iconify.widget.IconTextView android:textSize="28sp" android:textColor="@color/tintColor" android:gravity="center" android:id="@+id/link_icon" android:focusable="true" android:clickable="true" android:layout_width="34dp" android:layout_height="34dp" android:text="{fa-google}"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="64dp" android:layout_weight="1">
                    <TextView android:textSize="16sp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/titleLabel" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="14sp" android:textColor="@color/lightTextColor" android:id="@+id/urlTV" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text=""/>
                </LinearLayout>
                <ImageView android:id="@+id/arrow" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/right_arrow"/>
            </LinearLayout>
            <View android:id="@+id/divider_view" android:background="@color/dividerColor" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="1dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
