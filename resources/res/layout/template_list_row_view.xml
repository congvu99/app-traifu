<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/titleLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <com.joanzapata.iconify.widget.IconTextView android:textSize="16sp" android:textColor="@color/black25PercentColor" android:layout_gravity="center_vertical" android:id="@+id/edit_btn" android:padding="10dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="{fa-pencil}"/>
        </LinearLayout>
        <TextView android:textSize="14sp" android:textColor="@color/black50PercentColor" android:ellipsize="end" android:id="@+id/workout_details" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
    </LinearLayout>
    <View android:background="@color/dividerColor" android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>
