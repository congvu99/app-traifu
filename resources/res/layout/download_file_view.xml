<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/main_view" android:background="@drawable/download_file_view_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
        <com.joanzapata.iconify.widget.IconTextView android:textSize="32sp" android:textColor="@color/tintColor" android:id="@+id/file_icon_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="{fa-file}" android:shadowColor="#22000000" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"/>
        <TextView android:textSize="15sp" android:textColor="@color/black25PercentColor" android:ellipsize="middle" android:layout_gravity="center_vertical" android:id="@+id/file_name_view" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:singleLine="true" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/icon_view" android:clickable="true" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:src="@drawable/icon_download" android:scaleType="fitCenter"/>
    </LinearLayout>
</LinearLayout>
