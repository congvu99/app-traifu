<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#e6e6e6" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/selector_view" android:background="@color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp">
            <View android:background="@color/lightGrayColor" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentTop="true"/>
            <TextView android:textSize="15sp" android:textColor="@color/black25PercentColor" android:id="@+id/selector_title_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginRight="64dp" android:layout_marginBottom="15dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <com.joanzapata.iconify.widget.IconTextView android:textSize="24sp" android:textColor="@color/black50PercentColor" android:id="@+id/arrow_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:text="{fa-angle-right}" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="15sp" android:textColor="@color/black75PercentColor" android:id="@+id/selector_detail_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:layout_marginBottom="15dp" android:layout_toLeftOf="@+id/arrow_view" android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/week_view" android:background="@color/white" android:paddingBottom="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="@color/lightGrayColor" android:layout_width="match_parent" android:layout_height="1dp"/>
            <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="15sp" android:textColor="@color/black25PercentColor" android:id="@+id/week_title_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="64dp" android:text="Select Start Week" android:layout_weight="1"/>
                <TextView android:textSize="15sp" android:textColor="@color/black50PercentColor" android:id="@+id/week_select_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp"/>
                <com.joanzapata.iconify.widget.IconTextView android:textSize="24sp" android:textColor="@color/black50PercentColor" android:id="@+id/week_arrow_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="{fa-angle-right}" android:layout_centerVertical="true"/>
                <Spinner android:layout_gravity="left" android:id="@+id/week_spinner" android:background="@null" android:visibility="gone" android:layout_width="150dp" android:layout_height="wrap_content" android:dropDownWidth="150dp" style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>
            </LinearLayout>
            <TextView android:textColor="@color/lightTextColor" android:paddingLeft="20dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/weekSelectionTip"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/start_date_view" android:background="@color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="@color/lightGrayColor" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentTop="true"/>
            <TextView android:textSize="15dp" android:textColor="@color/black25PercentColor" android:id="@+id/sd_title_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="64dp" android:text="@string/StartDate" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <TextView android:textSize="15dp" android:textColor="@color/black50PercentColor" android:id="@+id/sd_detail_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="2dp" android:layout_marginRight="64dp" android:layout_marginBottom="10dp" android:layout_below="@+id/sd_title_view" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="15dp" android:textColor="@color/warningColor" android:id="@+id/warning_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="64dp" android:layout_marginBottom="10dp" android:layout_below="@+id/sd_detail_view" android:layout_alignParentLeft="true"/>
            <com.joanzapata.iconify.widget.IconTextView android:textSize="24dp" android:textColor="@color/black50PercentColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:text="{fa-angle-right}" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/delete_view" android:background="@color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="@color/lightGrayColor" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentTop="true"/>
            <TextView android:textSize="15dp" android:textColor="@color/black25PercentColor" android:id="@+id/del_title_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="64dp" android:layout_marginBottom="10dp" android:text="@string/deleteClientUpcomingPlan" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <CheckBox android:id="@+id/delete_cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:checked="true" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <View android:background="@color/lightGrayColor" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/del_title_view"/>
        </RelativeLayout>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp">
            <TextView android:textSize="16dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/copy_btn" android:background="@color/tintColor" android:clickable="true" android:layout_width="300dp" android:layout_height="44dp" android:layout_marginLeft="15dp" android:text="@string/Copy"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
