    </RelativeLayout>
    <View android:id="@+id/composer_lower_border" android:background="@color/intercom_composer_border" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <com.intercom.composer.pager.NonSwipeableViewPager android:id="@+id/composer_view_pager" android:background="@color/intercom_composer_white" android:layout_width="match_parent" android:layout_height="0dp"/>
</merge>
