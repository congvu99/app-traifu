<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:textSize="14sp" android:textColor="@color/intercom_conversation_rating_text" android:layout_gravity="center_horizontal" android:id="@+id/rate_your_conversation_text_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/intercom_rate_your_conversation"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/intercom_rating_options_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:textSize="16sp" android:textColor="@color/intercom_white" android:layout_gravity="center_horizontal" android:id="@+id/intercom_rating_tell_us_more_button" android:paddingTop="6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/intercom_tell_us_more" android:textAllCaps="false"/>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/intercom_you_rated_layout" android:paddingBottom="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/intercom_conversation_rating_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/intercom_you_rated_the_conversation"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/intercom_you_rated_image_view" android:paddingLeft="5dp" android:layout_width="18dp" android:layout_height="18dp" android:importantForAccessibility="no"/>
        </LinearLayout>
        <TextView android:textSize="14sp" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/intercom_thanks_for_letting_us_know"/>
    </LinearLayout>
</LinearLayout>
