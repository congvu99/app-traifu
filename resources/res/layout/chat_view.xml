<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ListView android:id="@+id/chatView" android:background="#f5f5f5" android:paddingTop="10dp" android:paddingBottom="10dp" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="0dp" android:cacheColorHint="#00000000" android:divider="@null" android:layout_weight="1"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/messageET" android:background="@color/white" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="12dp" android:hint="@string/newMessage" android:maxLines="4" android:scrollHorizontally="false" android:maxLength="1000" android:layout_weight="1" android:inputType="none|text|textCapSentences|textMultiLine|textShortMessage"/>
        <com.joanzapata.iconify.widget.IconTextView android:textSize="15sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/sendBtn" android:background="@color/tintColor" android:clickable="true" android:layout_width="75dp" android:layout_height="match_parent" android:text="@string/send"/>
    </LinearLayout>
</LinearLayout>
