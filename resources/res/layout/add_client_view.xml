<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#e6e6e6" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="16dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/input_layout_first_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginRight="-4dp">
                <EditText android:textSize="16sp" android:textColor="@color/black25PercentColor" android:id="@+id/firstNameField" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/firstNameHint" android:inputType="textCapSentences">
                    <requestFocus/>
                </EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/input_layout_last_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginRight="-4dp">
                <EditText android:textSize="16sp" android:textColor="@color/black25PercentColor" android:id="@+id/lastNameField" android:layout_width="match_parent" android:layout_height="44dp" android:hint="@string/lastNameHint" android:inputType="textCapSentences"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/input_layout_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginRight="-4dp" android:layout_marginBottom="-8dp">
                <EditText android:textSize="16sp" android:textColor="@color/black25PercentColor" android:id="@+id/emailField" android:layout_width="match_parent" android:layout_height="44dp" android:hint="@string/emailHint" android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ts_wrapper" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="15dp">
                <LinearLayout android:orientation="horizontal" android:id="@+id/trainer_selector" android:layout_width="match_parent" android:layout_height="44dp">
                    <TextView android:textSize="16sp" android:textColor="@color/black25PercentColor" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/primaryTrainer" android:layout_weight="1"/>
                    <Spinner android:gravity="right" android:layout_gravity="center_vertical" android:id="@+id/primaryTrainerSpinner" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <com.joanzapata.iconify.widget.IconTextView android:textSize="24sp" android:textColor="@color/black25PercentColor" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="{fa-angle-right}"/>
                </LinearLayout>
                <View android:background="@color/dividerColor" android:layout_width="match_parent" android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ss_wrapper" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="15dp">
                <LinearLayout android:orientation="horizontal" android:id="@+id/segments_selector" android:layout_width="match_parent" android:layout_height="44dp">
                    <TextView android:textSize="16sp" android:textColor="@color/black25PercentColor" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/ss_title_view" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/Groups" android:layout_weight="1"/>
                    <TextView android:textSize="16sp" android:textColor="@color/black25PercentColor" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/ss_detail_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp"/>
                    <com.joanzapata.iconify.widget.IconTextView android:textSize="24sp" android:textColor="@color/black25PercentColor" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="{fa-angle-right}"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@color/black50PercentColor" android:layout_width="match_parent" android:layout_height="1dp"/>
        <com.joanzapata.iconify.widget.IconTextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/addClientBtn" android:background="@color/tintColor" android:clickable="true" android:layout_width="280dp" android:layout_height="44dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="@string/addClientBtnText"/>
    </LinearLayout>
</ScrollView>
