<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#e6e6e6" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="#e6e6e6" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_gravity="center_horizontal" android:id="@+id/profile_wrapper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp">
            <com.loopj.android.image.SmartImageView android:id="@+id/profile_iv" android:background="@drawable/profile_bg" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/profile" android:scaleType="centerInside"/>
            <ImageView android:layout_gravity="center" android:id="@+id/add_iv" android:visibility="gone" android:layout_width="32dp" android:layout_height="32dp" android:src="0x7f080107" android:scaleType="centerInside"/>
        </FrameLayout>
        <RelativeLayout android:orientation="horizontal" android:background="#ffffff" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
            <TextView android:textSize="18sp" android:id="@+id/first_name_text" android:paddingLeft="5dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/first_name" android:layout_centerVertical="true"/>
            <EditText android:id="@+id/first_name" android:background="#00000000" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="15dp" android:hint="@string/first_name" android:layout_toRightOf="@+id/first_name_text" android:layout_alignBaseline="@+id/first_name_text" android:layout_centerVertical="true" android:inputType="textCapSentences"/>
        </RelativeLayout>
        <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:orientation="horizontal" android:background="#ffffff" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:id="@+id/last_name_text" android:paddingLeft="5dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/last_name" android:layout_centerVertical="true"/>
            <EditText android:id="@+id/last_name" android:background="#00000000" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="15dp" android:hint="@string/last_name" android:layout_toRightOf="@+id/last_name_text" android:layout_alignBaseline="@+id/last_name_text" android:layout_centerVertical="true" android:inputType="textCapSentences"/>
        </RelativeLayout>
        <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:orientation="horizontal" android:background="#ffffff" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:id="@+id/email_text" android:paddingLeft="5dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/email" android:layout_centerVertical="true"/>
            <EditText android:id="@+id/email" android:background="#00000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="62dp" android:layout_marginRight="15dp" android:hint="@string/email" android:layout_toRightOf="@+id/email_text" android:layout_alignBaseline="@+id/email_text" android:layout_centerVertical="true" android:inputType="textEmailAddress"/>
        </RelativeLayout>
        <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:orientation="horizontal" android:background="#ffffff" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:id="@+id/phone_text" android:paddingLeft="5dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/phone" android:layout_centerVertical="true"/>
            <EditText android:id="@+id/phone" android:background="#00000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="57dp" android:layout_marginRight="15dp" android:hint="@string/phone" android:layout_toRightOf="@+id/phone_text" android:layout_alignBaseline="@+id/phone_text" android:layout_centerVertical="true" android:inputType="phone"/>
        </RelativeLayout>
        <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:orientation="horizontal" android:background="#ffffff" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:id="@+id/gender_text" android:paddingLeft="5dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sex" android:layout_centerVertical="true"/>
            <RadioGroup android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp">
                <RadioButton android:id="@+id/radiomale" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="60dp" android:layout_marginRight="15dp" android:text="@string/radio_male" android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/radiofemale" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="60dp" android:layout_marginRight="15dp" android:text="@string/radio_female" android:onClick="onRadioButtonClicked"/>
            </RadioGroup>
        </RelativeLayout>
        <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:orientation="horizontal" android:background="#ffffff" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:id="@+id/dob_text" android:paddingLeft="5dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dob" android:layout_centerVertical="true"/>
            <TextView android:id="@+id/dob" android:background="#00000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="70dp" android:layout_marginRight="15dp" android:hint="@string/dob" android:layout_toRightOf="@+id/dob_text" android:layout_alignBaseline="@+id/dob_text" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/user_password" android:background="#ffffff" android:paddingLeft="10dp" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
            <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="1dp"/>
            <TextView android:textSize="18sp" android:id="@+id/password_text" android:paddingLeft="5dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/change_password" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/right_arrow" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
            <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="1dp"/>
        </RelativeLayout>
        <com.joanzapata.iconify.widget.IconTextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/profile_updatebtn" android:background="@color/tintColor" android:clickable="true" android:layout_width="150dp" android:layout_height="44dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="@string/profile_update_btn"/>
    </LinearLayout>
</ScrollView>
