<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#e6e6e6" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/horizontal_divider"/>
        <EditText android:id="@+id/name_et" android:background="@color/white" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="44dp" android:hint="@string/exercise_name" android:singleLine="true" android:inputType="none|text|textCapSentences|textNoSuggestions" android:imeOptions="actionUnspecified|actionNone|actionSend|actionNext|flagNoExtractUi"/>
        <include layout="@layout/horizontal_divider"/>
        <RadioGroup android:orientation="horizontal" android:id="@+id/radio_group" android:background="@color/white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="44dp">
            <RadioButton android:textColor="@color/black25PercentColor" android:id="@+id/radio_strength" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/Strength"/>
            <RadioButton android:textColor="@color/black25PercentColor" android:id="@+id/radio_cardio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/Cardio"/>
        </RadioGroup>
        <include layout="@layout/horizontal_divider"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/find_yt_btn" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.loopj.android.image.SmartImageView android:layout_gravity="center_vertical" android:id="@+id/ytThumbnail" android:visibility="gone" android:layout_width="40dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/black25PercentColor" android:layout_gravity="center_vertical" android:id="@+id/titleLabel" android:paddingLeft="15dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/selectAYTVideo" android:layout_weight="1"/>
            <com.joanzapata.iconify.widget.IconTextView android:textSize="20sp" android:textColor="@color/black25PercentColor" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/arrow" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="{fa-angle-right}"/>
        </LinearLayout>
        <include layout="@layout/horizontal_divider"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/tags_btn" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/black25PercentColor" android:layout_gravity="center_vertical" android:id="@+id/tagsLabel" android:paddingLeft="15dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Tags" android:layout_weight="1"/>
            <com.joanzapata.iconify.widget.IconTextView android:textSize="20sp" android:textColor="@color/black25PercentColor" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="{fa-angle-right}"/>
        </LinearLayout>
        <include layout="@layout/horizontal_divider"/>
        <EditText android:textSize="16sp" android:textColor="@color/black25PercentColor" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/note_et" android:background="@color/white" android:paddingLeft="15dp" android:paddingTop="15dp" android:paddingRight="15dp" android:focusable="true" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/notes" android:lines="5" android:minLines="5" android:inputType="none|text|textCapSentences|textMultiLine"/>
        <include layout="@layout/horizontal_divider"/>
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="40dp">
            <com.joanzapata.iconify.widget.IconTextView android:textSize="16sp" android:textColor="@color/black25PercentColor" android:gravity="center" android:id="@+id/cancel_btn" android:background="@color/black75PercentColor" android:clickable="true" android:layout_width="120dp" android:layout_height="44dp" android:text="@string/Cancel"/>
            <com.joanzapata.iconify.widget.IconTextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/save_btn" android:background="@color/tintColor" android:clickable="true" android:layout_width="120dp" android:layout_height="44dp" android:layout_marginLeft="15dp" android:text="@string/Save"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
