<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:paddingTop="30dp" android:paddingBottom="0dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingLeft="12dp" android:paddingRight="0dp" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="3">
        <LinearLayout android:gravity="left" android:id="@+id/like_btn" android:clickable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@+id/like_icon" android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/heart_icon" android:tint="@color/iconColor"/>
                <ImageView android:layout_gravity="center" android:id="@+id/like_selected_icon" android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/heart_icon_fill"/>
                <TextView android:textSize="16sp" android:textColor="@color/lightBlack" android:id="@+id/like" android:paddingLeft="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Like"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="left" android:id="@+id/comment_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/comment_icon" android:tint="@color/iconColor"/>
                <TextView android:textSize="16sp" android:textColor="@color/lightBlack" android:paddingLeft="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Comment"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="left" android:orientation="horizontal" android:id="@+id/share_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <com.joanzapata.iconify.widget.IconTextView android:textSize="32sp" android:textColor="@color/tintColor" android:gravity="center" android:id="@+id/prev_btn" android:visibility="visible" android:clickable="true" android:layout_width="44dp" android:layout_height="44dp" android:text="{fa-angle-left}"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.joanzapata.iconify.widget.IconTextView android:textSize="32sp" android:textColor="@color/tintColor" android:gravity="center" android:id="@+id/next_btn" android:visibility="visible" android:clickable="true" android:layout_width="44dp" android:layout_height="44dp" android:text="{fa-angle-right}"/>
            <com.joanzapata.iconify.widget.IconTextView android:textSize="22sp" android:textColor="@color/tintColor" android:gravity="center" android:id="@+id/carrot_view" android:paddingRight="4dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="{fa-caret-up }"/>
        </LinearLayout>
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/pp_tooltip_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        <TextView android:textSize="15dp" android:textColor="@color/white" android:background="@color/tintColor" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/seePPTip"/>
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
