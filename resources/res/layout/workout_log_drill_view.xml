    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="right" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/updateStatsBtn" android:visibility="visible" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="30dp" android:src="0x7f080136" android:scaleType="centerInside" android:tint="@color/iconColor"/>
        <ImageView android:id="@+id/delete_exercise" android:visibility="visible" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/icon_delete" android:scaleType="centerInside"/>
    </LinearLayout>
    <View android:background="@color/dividerColor" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="17dp"/>
</LinearLayout>
